<div class="container scrollable no-padding">
    <div class="big-image">
        <img src="../images/{{plant.name}}.jpg" alt="plant picture" />
    </div>
    <div class="content-container">
        <div class="panel">
            <h1>{{plant.name}}</h1>
            <h2>{{plant.variant}}</h2>
            <h3>Â£{{plant.price}} or {{plant.deal}}</h3>
            <table class="item-info">
                <tr>
                    <td>Form</td>
                    <td>{{plant.form}}</td>
                </tr>
                <tr>
                    <td>Stock level</td>
                    {{{stockLevel plant}}}
                </tr>
                <tr>
                    <td>Location</td>
                    <td>{{plant.location}}</td>
                </tr>
            </table>
            <a href="/plant/{{plant.name}}/location-update" class="btn-wide btn-link">
                <i class="fas fa-location-arrow"></i>  Edit location
            </a>
            <a href="/plant/{{plant.name}}/stock-update" class="btn-wide btn-link">
                <i class="fas fa-box-open"></i>  Edit stock level
            </a>
        </div>
    </div>
</div>
