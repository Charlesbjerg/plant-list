<!-- Search panel -->
<div class="container center-content">
    {{#if results}}
    <div class="search-results">
    {{else}}
    <div class="search-results no-scroll">
    {{/if}}
    <div class="panel">
        <form action="/search" method="POST">
            <div class="search-bar">
                <input type="search" name="search" placeholder="Search.." />
                <button type="submit" class="btn-search"><i class="fas fa-search fa-2x fa-fw"></i></button>
            </div>
        </form>
        {{#if result}}
            {{#each result}}
                <div class="item">
                    <h3>{{name}}</h3>
                    <p>{{form}} - Â£{{price}}</p>
                    <a href="/plant/{{name}}" class="btn-wide">View</a>
                </div>
            {{/each}}
        {{/if}}
    </div>
</div>