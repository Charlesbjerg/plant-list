<div class="container center-content">
    <div class="search-options">
        <div class="panel choice">
            <h3>Search for a plant</h3>
            <form action="/search" method="POST">
                <input type="text" name="search" class="search-bar" placeholder="Geranium" />
                <button type="submit" class="btn-wide">
                    <i class="fas fa-search"></i> Search</button>
            </form>
        </div>
        <div class="panel choice">
            <h3>View all plants</h3>
            <a class="btn-wide" href="/all">
                <i class="fas fa-th"></i> View</a>
        </div>
        <div class="panel choice">
            <h3>Create new plant</h3>
            <a class="btn-wide" href="/plant/create">
                <i class="fas fa-plus-square"></i> Create</a>
            </a>
        </div>
    </div>  
</div>